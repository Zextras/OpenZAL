targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-zal"
pkgver="23.4.0"
pkgrel="1"
pkgdesc="Carbonio extras"
pkgdesclong=(
  "Abstraction Layer for Carbonio"
)
maintainer="Zextras <packages@zextras.com>"
arch="all"
license=("GPLv2")
section="admin"
priority="optional"
url="https://www.zextras.com/"

build() {
}

package() {
  cd ..
  install -Dm 744 $i "${pkgdir}/opt/zextras/zal/zal.jar"
}

postinst() {
  rm -f /opt/zextras/lib/ext/carbonio/zal.jar
  mkdir -p /opt/zextras/lib/ext/carbonio
  ln -s "/opt/zextras/zal/zal.jar" "/opt/zextras/lib/ext/carbonio/zal.jar"
  echo "======================================================"
  echo "Carbonio ZAL installed successfully!"
  echo "======================================================"
}

prerm() {
}

postrm() {
  rm -f /opt/zextras/lib/ext/carbonio/zal.jar
}
