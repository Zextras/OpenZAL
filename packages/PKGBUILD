targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-zal"
pkgver="3.10.12"
pkgrel="1"
pkgdesc="Carbonio extras"
pkgdesclong=(
  "Abstraction Layer for Carbonios"
)
maintainer="Zextras <packages@zextras.com>"
arch="all"
license=("GPLv2")
section="admin"
priority="optional"
url="https://www.zextras.com/"
sources=(
  "zal.jar"
)
hashsums=(
  "SKIP"
)
depends=(
    # require the mailboxd to be installed
    "carbonio-appserver >= 4.0.7"
)
conflicts=(
    "carbonio-appserver >= 4.0.8"
)

build() {
}

package() {
  cd "${srcdir}"
  install -Dm 744 zal.jar "${pkgdir}/opt/zextras/zal/current.jar"
}

postinst() {
}

prerm() {
}

postrm() {
}
